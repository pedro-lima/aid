<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="aid" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>aid.core.model.Administrador</class>
		<class>aid.core.model.Aluno</class>
		<class>aid.core.model.Beneficiado</class>
		<class>aid.core.model.Contato</class>
		<class>aid.core.model.Descarte</class>
		<class>aid.core.model.Doacao</class>
		<class>aid.core.model.Doador</class>
		<class>aid.core.model.Endereco</class>
		<class>aid.core.model.Homologacao</class>
		<class>aid.core.model.ItemHomologacao</class>
		<class>aid.core.model.Montagem</class>
		<class>aid.core.model.Peca</class>
		<class>aid.core.model.PessoaFisica</class>
		<class>aid.core.model.Ponto</class>
		<class>aid.core.model.Professor</class>
		<class>aid.core.model.Software</class>
		<class>aid.core.model.Turma</class>
		<class>aid.core.model.Usuario</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/aid" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="123" />

			<property name="connection.provider_class" value="org.hibernate.connection.C3P0ConnectionProvider" />
			
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />

			<property name="hibernate.c3p0.min_size" value="5" />
			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.timeout" value="300" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.c3p0.idle_test_period" value="3000" />
		</properties>
	</persistence-unit>
</persistence>    