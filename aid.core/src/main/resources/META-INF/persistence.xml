<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="aid" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<mapping-file>/META-INF/orm.xml</mapping-file>
		<class>aid.core.main.models.Administrador</class>
		<class>aid.core.main.models.Aluno</class>
		<class>aid.core.main.models.Beneficiado</class>
		<class>aid.core.main.models.Contato</class>
		<class>aid.core.main.models.Descarte</class>
		<class>aid.core.main.models.Doacao</class>
		<class>aid.core.main.models.Doador</class>
		<class>aid.core.main.models.Endereco</class>
		<class>aid.core.main.models.Homologacao</class>
		<class>aid.core.main.models.ItemHomologacao</class>
		<class>aid.core.main.models.Montagem</class>
		<class>aid.core.main.models.Peca</class>
		<class>aid.core.main.models.PessoaFisica</class>
		<class>aid.core.main.models.Ponto</class>
		<class>aid.core.main.models.Professor</class>
		<class>aid.core.main.models.Software</class>
		<class>aid.core.main.models.Usuario</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/aid" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="1234" />

			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />

			<property name="hibernate.c3p0.min_size" value="5" />
			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.timeout" value="300" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.c3p0.idle_test_period" value="3000" />

			<property name="hibernate.temp.use_jdbc_metadata_defaults"
				value="false" />
		</properties>
	</persistence-unit>
</persistence>    